<header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="navbar-brand"><%= link_to "BookRV", root_path, id: "logo" %></div>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">
                    <%= link_to "Book", root_path %>
                </li>
                <li>
                    <a href="#">Categories</a>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <%= current_user.name %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", '#' %></li>
                        <li><%= link_to "Admin section",'#' %></li>
                    </ul>
                </li>
                <li><%= link_to "Sign Out",logout_path, method:"delete",class:"glyphicon glyphicon-log-out" %></li>
                <% else %>
                <li>
                    <%= link_to "Sign Up", signup_path,class:"glyphicon glyphicon-user" %>
                </li>
                <li><%= link_to "Log in", login_path,class:"glyphicon glyphicon-log-in" %></li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>
